<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_currency_item_height"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_currency_info_logo_item_holder"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="@dimen/sp_currency_logo"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="B"/>

    <TextView
        android:id="@+id/text_currency_info_name_item_holder"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center|start"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toStartOf="@+id/text_currency_info_symbo_item_holder"
        app:layout_constraintStart_toEndOf="@id/text_currency_info_logo_item_holder"
        tools:text="Bitcoin"/>

    <TextView
        android:id="@+id/text_currency_info_symbo_item_holder"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@+id/img_currency_info_arrow_item_holder"
        tools:text="BTC"/>

    <ImageView
        android:id="@+id/img_currency_info_arrow_item_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>